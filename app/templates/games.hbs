<!--<h4> Please select game difficulty </h4>-->
{{#bs-modal class="startModal" footer=false open=openModal title="Start Game" closedAction="closeModal" backdropClose=false closeButton=false}}
  <div style="margin 0 auto;"><iframe align="middle" src="//giphy.com/embed/xT0GqjBCkO9BEiSEOk" width="100%" height="288" frameBorder="0" class="giphy-embed" allowFullScreen></iframe><p><a href="https://giphy.com/gifs/funny-fruit-lemon-sweet-xT0GqjBCkO9BEiSEOk"></a></p></div>
  <h4> Please Select Number Of Cards You With To Play </h4>
  {{#bs-modal-footer}}
    <span id="gameButtons">
      {{#link-to 'games.play' 4}}
        <button type="button" class="btn btn-info gamesizebutton" data-dismiss="modal" {{action 'closeModal'}}>4</button>
      {{/link-to}}

      {{#link-to 'games.play' 6}}
        <button type="button" class="btn btn-info gamesizebutton" data-dismiss="modal" {{action 'closeModal'}}>6</button>
      {{/link-to}}

      {{#link-to 'games.play' 8}}
        <button type="button" class="btn btn-info gamesizebutton" data-dismiss="modal" {{action 'closeModal'}}>8</button>
      {{/link-to}}

      {{#link-to 'games.play' 10}}
        <button type="button" class="btn btn-info gamesizebutton" data-dismiss="modal" {{action 'closeModal'}}>10</button>
      {{/link-to}}

      {{#link-to 'games.play' 12}}
        <button type="button" class="btn btn-info gamesizebutton" data-dismiss="modal" {{action 'closeModal'}}>12</button>
      {{/link-to}}
    </span>
  {{/bs-modal-footer}}
{{/bs-modal}}

{{outlet}}
